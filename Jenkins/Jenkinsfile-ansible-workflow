pipeline {
   agent any

   stages {
      stage('Image Build') {
         steps {
            echo 'Infrastructure Provisioned'
            sleep 10
         }
      }
    stage('Infrastructure Provisioning') {
         steps {
            echo 'VM provisioned'
            sleep 10
         }
      }
    stage('Deliver through Ansible Workflow') {
         steps {
         ansibleTower(
             credential: 'root via Hashicorp Vault', 
             inventory: 'IaC Inventory', 
             jobTemplate: 'IAC Workflow - Webserver', 
             jobType: 'run', 
             templateType: 'workflow',
             throwExceptionWhenFail: true, 
             towerCredentialsId: 'toweradmin', 
             towerLogLevel: 'full',
             importTowerLogs: true,
             removeColor: false,
             towerServer: 'tower',         
             extraVars: '''---
             msg: "Configured trough a Job Template!!\n"'''
         )
         }
      }

   }
}
